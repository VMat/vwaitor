var router = require('express').Router();
var storageService = require('../services/storageService.js');

router.get('/', function(req, res){
    storageService.getAccounts(req, res);
});

router.get('/:id', function(req, res){
  storageService.getAccount(req, res);
});

router.post('/', function (req, res){
  storageService.createAccount(req, res);
});

router.put('/:id', function (req, res){
  storageService.updateAccount(req, res);
});

router.patch('/:id', function (req, res){
  storageService.patchAccount(req, res);
});

router.delete('/', function (req, res){
  storageService.deleteAccounts(req, res);
});

router.delete('/:id', function (req, res){
  storageService.deleteAccount(req, res);
});

module.exports = router;
