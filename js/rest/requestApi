var router = require('express').Router();
var requestService = require('../services/requestService.js');

router.get('/', function (req, res){
  requestService.getRequests(req, res);
});

router.get('/:id', function (req, res){
  requestService.getRequest(req, res);
});

router.post('/', function (req, res){
  requestService.createRequest(req, res)
});
      
router.put('/:id', function (req, res) {
  requestService.updateRequest(req, res);
});

router.delete('/', function (req, res) {
  requestService.deleteRequests(req, res);
});

router.delete('/:id', function (req, res) {
  requestService.deleteRequest(req, res);
});

module.exports = router;
